
<%= form_for @narrative do |n| %>
  <%= n.label :title %> </br>
  <%= n.text_field :title, :placeholder => "Title of your narrative" %></br>

  <%= n.label :story %></br>
  <%= n.text_area :story, :placeholder => "Your story goes here" %>
  <%= n.hidden_field :writer_id, :value => session[:writer_id] %>
  <%= n.hidden_field :image_id, :value=> @imageID %>

  <%= n.submit "Submit your Caption" %>

<% end %>
